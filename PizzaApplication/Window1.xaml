<Window x:Class="PizzaApplication.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaApplication"
        mc:Ignorable="d"
        Title="Window1" Height="400" Width="300">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/255px-Flag_of_Italy.svg.png"/>
        </Grid.Background>
        <Label Content="Your Way Receipt" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="30
               "/>
        <Label x:Name="ReceiptNum" Content="Receipt Number: 1" HorizontalAlignment="Left" Margin="12,74,0,0" VerticalAlignment="Top" FontSize="25" Width="278"/>
        <Label x:Name="ReceiptCost" Content="Total Cost: £0" HorizontalAlignment="Left" Margin="12,133,0,0" VerticalAlignment="Top" FontSize="25" Width="278"/>
        <Label x:Name="ReceiptDelivery" Content="Delivery: YES" HorizontalAlignment="Left" Margin="12,186,0,0" VerticalAlignment="Top" FontSize="25" Width="278"/>
        <Label x:Name="ReceiptAddress" Content="Address: TA6" HorizontalAlignment="Left" Margin="12,237,0,0" VerticalAlignment="Top" FontSize="25" Width="278"/>

    </Grid>
</Window>
